@model PARCIALDBEveriflix.Models.VotacionContenido
@{
    ViewBag.Title = "Crear Nueva Votación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Everiflix</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #000000;
            color: #ffffff;
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            padding: 20px;
        }

        .voting-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #111111;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 15px rgba(255, 0, 0, 0.2);
        }

        h1 {
            color: #ffffff;
            text-align: center;
            margin-bottom: 30px;
            font-weight: 700;
            border-bottom: 2px solid #b71c1c;
            padding-bottom: 10px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            margin-bottom: 10px;
            font-weight: 500;
            color: #dddddd;
            font-size: 16px;
        }

        .form-control {
            background-color: #222222;
            border: 2px solid #333333;
            color: #ffffff;
            border-radius: 6px;
            padding: 12px 15px;
            width: 100%;
            font-size: 15px;
            transition: all 0.3s;
        }

            .form-control:focus {
                background-color: #333333;
                border-color: #b71c1c;
                outline: none;
            }

        .content-selection {
            background-color: #222222;
            border-radius: 8px;
            padding: 20px;
            min-height: 150px;
            border: 2px dashed #333333;
            text-align: center;
            color: #777777;
        }

        .checkbox-item {
            display: block;
            margin: 10px 0;
            padding: 10px;
            background-color: #333333;
            border-radius: 6px;
            transition: all 0.2s;
        }

            .checkbox-item:hover {
                background-color: #3a3a3a;
            }

            .checkbox-item input {
                margin-right: 10px;
            }

        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            border: none;
        }

        .btn-primary {
            background-color: #b71c1c;
            color: white;
        }

            .btn-primary:hover {
                background-color: #9c1616;
                transform: translateY(-2px);
            }

        .btn-secondary {
            background-color: transparent;
            color: #aaaaaa;
            border: 2px solid #555555;
        }

            .btn-secondary:hover {
                color: #ffffff;
                border-color: #b71c1c;
            }

        .footer {
            text-align: center;
            margin-top: 30px;
            color: #555555;
            font-size: 12px;
        }
    </style>
</head>

<body>
    <div class="voting-container">
        <h1>@ViewBag.Title</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="form-label">Título de la Votación</label>
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese un título descriptivo" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="form-label">Tipo de Contenido</label>
                @Html.DropDownList("Id_TipoContenido", null, htmlAttributes: new { @class = "form-control", id = "tipoContenido" })
                @Html.ValidationMessageFor(model => model.Id_TipoContenido, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="form-label">Contenidos a Votar (selecciona 2-4)</label>
                <div class="content-selection" id="contenidos-container">
                    Selecciona un tipo de contenido primero
                </div>
            </div>

            <div style="display: flex; gap: 15px; justify-content: flex-end;">
                <button type="submit" class="btn btn-primary">Crear Votación</button>
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>

    <div class="footer">
        © 2025 - Max AGO MET. Avotibustion
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('#tipoContenido').change(function () {
                    var tipoId = $(this).val();
                    if (tipoId) {
                        $.get('@Url.Action("GetContenidosByTipo", "Votacion")', { tipoId: tipoId }, function (data) {
                            var container = $('#contenidos-container');
                            container.empty();

                            if (data.length > 0) {
                                $.each(data, function (i, item) {
                                    container.append(
                                        '<div class="checkbox-item">' +
                                        '<label>' +
                                        '<input type="checkbox" name="contenidoIds" value="' + item.Id + '"> ' +
                                        item.Nombre +
                                        '</label>' +
                                        '</div>'
                                    );
                                });
                            } else {
                                container.html('No hay contenidos de este tipo');
                            }
                        });
                    } else {
                        $('#contenidos-container').html('Selecciona un tipo de contenido primero');
                    }
                });
            });
        </script>
    }
</body>