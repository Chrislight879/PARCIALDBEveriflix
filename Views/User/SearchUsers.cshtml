<head>
    <link rel="stylesheet" href="~/Content/StyleSheetcenter.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<div class="container">
    <h2>Buscar Usuarios</h2>

    <form action="@Url.Action("SearchUsers", "User")" method="get" class="search-form">
        <div class="form-group">
            <input type="text" name="searchString" placeholder="Buscar usuarios..." class="search-input" />
            <button type="submit" class="btn-search">
                <i class="fas fa-search"></i> Buscar
            </button>
        </div>
    </form>

    <ul class="user-results">
        @foreach (var user in Model)
        {
            <li class="user-card">
                <div class="user-info">
                    <img src="@user.ImgURL" alt="Imagen de @user.Username" class="profile-img" />
                    <div class="user-details">
                        <span class="username">@user.Username</span>
                        <span class="user-email">@user.Correo</span>
                    </div>
                </div>

                <!-- Botón de seguir o dejar de seguir -->
                @if (!ViewBag.FollowingIds.Contains(user.id_Usuario))
                {
                    <form action="@Url.Action("FollowUser", "User")" method="post" class="follow-form">
                        <input type="hidden" name="userIdToFollow" value="@user.id_Usuario" />
                        <button type="submit" class="btn-follow">
                            <i class="fas fa-user-plus"></i> Seguir
                        </button>
                    </form>
                }
                else
                {
                    <form action="@Url.Action("UnfollowUser", "User")" method="post" class="follow-form">
                        <input type="hidden" name="userIdToUnfollow" value="@user.id_Usuario" />
                        <button type="submit" class="btn-unfollow">
                            <i class="fas fa-user-minus"></i> Dejar de seguir
                        </button>
                    </form>
                }
            </li>
        }
    </ul>
</div>

@{
    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];
}

@if (successMessage != null)
{
    <div class="alert-success">
        <i class="fas fa-check-circle"></i> @successMessage
    </div>
}

@if (errorMessage != null)
{
    <div class="alert-danger">
        <i class="fas fa-exclamation-circle"></i> @errorMessage
    </div>
}

<style>
    /* Estilos generales */
    .container {
        max-width: 800px;
        margin: 30px auto;
        padding: 25px;
        background-color: #111;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(183, 28, 28, 0.15);
        position: relative;
    }

        .container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #b71c1c, #8c1616);
        }

    h2 {
        color: #ff5252;
        text-align: center;
        margin-bottom: 25px;
        padding-bottom: 15px;
        position: relative;
    }

        h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 150px;
            height: 3px;
            background: linear-gradient(90deg, transparent, #b71c1c, transparent);
        }

    /* Formulario de búsqueda */
    .search-form {
        margin-bottom: 30px;
    }

    .form-group {
        display: flex;
        gap: 10px;
    }

    .search-input {
        flex: 1;
        padding: 12px 15px;
        background-color: #222;
        border: 1px solid #333;
        color: white;
        border-radius: 6px;
        font-size: 1em;
        transition: all 0.3s;
    }

        .search-input:focus {
            outline: none;
            border-color: #b71c1c;
            box-shadow: 0 0 0 0.25rem rgba(183, 28, 28, 0.25);
        }

    .btn-search {
        background: linear-gradient(to right, #b71c1c, #d32f2f);
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .btn-search:hover {
            background: linear-gradient(to right, #d32f2f, #b71c1c);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(183, 28, 28, 0.3);
        }

    /* Lista de usuarios */
    .user-results {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .user-card {
        background-color: #1a1a1a;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-left: 4px solid #b71c1c;
        transition: all 0.3s;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
    }

        .user-card:hover {
            transform: translateX(5px);
            background-color: #222;
        }

    .user-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .profile-img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #b71c1c;
        transition: all 0.3s;
    }

        .profile-img:hover {
            transform: scale(1.1);
            box-shadow: 0 0 15px rgba(183, 28, 28, 0.6);
        }

    .user-details {
        display: flex;
        flex-direction: column;
    }

    .username {
        font-weight: 600;
        color: white;
    }

    .user-email {
        font-size: 0.9em;
        color: #aaa;
    }

    /* Botones */
    .btn-follow {
        background: linear-gradient(to right, #388e3c, #4caf50);
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 500;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .btn-follow:hover {
            background: linear-gradient(to right, #4caf50, #388e3c);
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(76, 175, 80, 0.3);
        }

    .btn-unfollow {
        background: linear-gradient(to right, #8c1616, #b71c1c);
        color: white;
        border: none;
        padding: 8px 15px;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 500;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .btn-unfollow:hover {
            background: linear-gradient(to right, #b71c1c, #8c1616);
            transform: translateY(-2px);
            box-shadow: 0 3px 8px rgba(183, 28, 28, 0.3);
        }

    /* Alertas */
    .alert-success {
        background: linear-gradient(to right, #388e3c, #4caf50);
        color: white;
        padding: 15px 25px;
        border-radius: 8px;
        margin: 20px auto;
        max-width: 800px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .alert-danger {
        background: linear-gradient(to right, #8c1616, #b71c1c);
        color: white;
        padding: 15px 25px;
        border-radius: 8px;
        margin: 20px auto;
        max-width: 800px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .container {
            padding: 20px;
            margin: 15px;
        }

        .form-group {
            flex-direction: column;
        }

        .user-card {
            flex-direction: column;
            align-items: flex-start;
            gap: 15px;
        }

        .follow-form {
            width: 100%;
        }

        .btn-follow, .btn-unfollow {
            width: 100%;
            justify-content: center;
        }
    }
</style>