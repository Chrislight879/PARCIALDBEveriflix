@model IEnumerable<PARCIALDBEveriflix.Models.Usuario>

@{
    ViewBag.Title = "Mis Seguidores";
}

<head>
    <link rel="stylesheet" href="~/Content/StyleSheetcenter.css">
</head>
<div class="container">
    <h2>Mis Seguidores</h2>
    <ul>
        @foreach (var follower in Model)
        {
            <li>
                @follower.Username
                <form action="@Url.Action("UnfollowUser", "User")" method="post" style="display:inline;">
                    <input type="hidden" name="userIdToUnfollow" value="@follower.id_Usuario" />
                    <button type="submit" class="btn btn-danger">Dejar de seguir</button>
                </form>
            </li>
        }
    </ul>
</div>
