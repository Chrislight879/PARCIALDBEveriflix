@model PARCIALDBEveriflix.Models.Usuario

@{
    ViewBag.Title = "Dashboard de Administrador";
}

<head>
    <link rel="stylesheet" href="~/Content/StyleSheet1.css">
</head>

<div class="container">
    <h2>Bienvenido Administrador, @ViewBag.UserName!</h2>
    <p>¡Estás en tu Dashboard de Administrador!</p>

    <!-- Mostrar foto de perfil -->
    <div class="profile-container">
        <img src="@Url.Content(Model.ImgURL ?? "~/Content/Images/default-profile.jpg")" alt="Foto de perfil" class="profile-img" />
    </div>

    <!-- Información del administrador -->
    <div class="profile-info">
        <p><strong>Correo:</strong> @Model.Correo</p>
        <p><strong>Rol:</strong> Administrador</p>
    </div>

    <!-- Botón para editar perfil -->
    <a href="@Url.Action("EditProfile", "User")" class="btn btn-primary">Editar Perfil</a>

    <!-- Secciones de administración -->
    <div class="admin-actions">
        <a href="@Url.Action("ManageUsers", "User")" class="btn btn-secondary">Administrar Usuarios</a>
        <a href="@Url.Action("ManageContent", "Admin")" class="btn btn-secondary">Administrar Contenido</a>
        <a href="@Url.Action("SiteSettings", "Admin")" class="btn btn-secondary">Configuración del Sitio</a>
    </div>
</div>
