@model PARCIALDBEveriflix.Models.Usuario

@{
    ViewBag.Title = "Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/StyleSheet1.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="dashboard-wrapper">
        <!-- Panel de Información del Usuario -->
        <div class="user-panel">
            <div class="profile-header">
                <img src="@Url.Content(Model.ImgURL ?? "~/Content/Images/default-profile.jpg")"
                     alt="Foto de perfil"
                     class="profile-img" />
                <h2>Información del Usuario</h2>
            </div>

            <div class="user-details">
                <p><strong>Nombre:</strong> @Model.Username</p>
                <p><strong>Correo:</strong> @Model.Correo</p>
                <p><strong>Rol:</strong> Administrator</p>
            </div>
            <div class="social-stats">
                <div class="stat-item">
                    <div class="stat-value">@ViewBag.FollowerCount</div>
                    <div class="stat-label">Seguidores</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">@ViewBag.FollowingCount</div>
                    <div class="stat-label">Siguiendo</div>
                </div>
            </div>

            <div class="user-actions">
                <a href="@Url.Action("EditProfile", "User")" class="btn">
                    <i class="fas fa-user-edit"></i> Editar Perfil
                </a>
                <a href="@Url.Action("SearchUsers")" class="btn">
                    <i class="fas fa-search"></i> Buscar Usuarios
                </a>
            </div>
        </div>

        <!-- Panel de Control -->
        <div class="control-panel">
            <div class="control-header">
                <h2>Panel de Control</h2>
            </div>

            <div class="control-grid">
                <div class="control-card">
                    <h3>Administrar Usuarios</h3>
                    <p>Gestiona todos los usuarios del sistema</p>
                    <a href="@Url.Action("ManageUsers", "User")" class="btn" style="margin-top: 15px;">
                        <i class="fas fa-users-cog"></i> Acceder
                    </a>
                </div>

                <div class="control-card">
                    <h3>Administrar Contenido</h3>
                    <p>Controla el contenido multimedia</p>
                    <a href="@Url.Action("ManageContent", "Admin")" class="btn" style="margin-top: 15px;">
                        <i class="fas fa-film"></i> Acceder
                    </a>
                </div>

                <div class="control-card">
                    <h3>Configuración del Sitio</h3>
                    <p>Ajustes generales de la plataforma</p>
                    <a href="@Url.Action("SiteSettings", "Admin")" class="btn" style="margin-top: 15px;">
                        <i class="fas fa-cog"></i> Acceder
                    </a>
                </div>

                <div class="control-card">
                    <h3>Reportes Estadísticos</h3>
                    <p>Genera reportes y análisis</p>
                    <a href="@Url.Action("Reports", "Admin")" class="btn" style="margin-top: 15px;">
                        <i class="fas fa-chart-bar"></i> Acceder
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
