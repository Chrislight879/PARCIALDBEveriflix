@model PARCIALDBEveriflix.Models.Usuario

@{
    ViewBag.Title = "Dashboard de Director";
}

<head>
    <link rel="stylesheet" href="~/Content/StyleSheet1.css">
</head>

<body>
    <div class="dashboard-wrapper">
        <!-- Panel de Información del Director (izquierda) -->
        <div class="user-panel">
            <div class="profile-header">
                <img src="@Url.Content(Model.ImgURL ?? "~/Content/Images/default-profile.jpg")" alt="Foto de perfil" class="profile-img" />
                <h2>Bienvenido Director, @ViewBag.UserName!</h2>
            </div>

            <div class="user-details">
                <p><strong>Correo:</strong> @Model.Correo</p>
                <p><strong>Rol:</strong> Director</p>
                <p><strong>Proyectos dirigidos:</strong> @ViewBag.DirectedProjects</p>
            </div>

            <div class="social-stats">
                <div class="stat-item">
                    <div class="stat-value">@ViewBag.FollowerCount</div>
                    <div class="stat-label">Seguidores</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">@ViewBag.FollowingCount</div>
                    <div class="stat-label">Siguiendo</div>
                </div>
            </div>

            <div class="user-actions">
                <a href="@Url.Action("EditProfile", "User")" class="btn">
                    <i class="fas fa-user-edit"></i> Editar Perfil
                </a>
                <a href="@Url.Action("MyVideos", "Director")" class="btn">
                    <i class="fas fa-video"></i> Mis Videos
                </a>
                <a href="@Url.Action("Create", "Video")" class="btn">
                    <i class="fas fa-plus-circle"></i> Nuevo Proyecto
                </a>
            </div>
        </div>

        <!-- Panel de Control del Director (derecha) -->
        <div class="control-panel">
            <div class="control-header">
                <h2>Panel de Control</h2>
            </div>

            <div class="control-grid">
                <div class="control-card">
                    <h3>Mis Proyectos</h3>
                    <p>Gestiona los proyectos audiovisuales que has dirigido.</p>
                    <a href="@Url.Action("MyProjects", "Director")" class="btn" style="margin-top: 15px;">
                        <i class="fas fa-film"></i> Gestionar Proyectos
                    </a>
                </div>

                <div class="control-card">
                    <h3>Mis Videos</h3>
                    <p>Visualiza los videos que has dirigido.</p>
                    <a href="@Url.Action("MyVideos", "Director")" class="btn" style="margin-top: 15px;">
                        <i class="fas fa-video"></i> Ver Videos
                    </a>
                </div>

                <div class="control-card">
                    <h3>Reportes de Proyectos</h3>
                    <p>Genera reportes sobre los proyectos dirigidos.</p>
                    <a href="@Url.Action("Reports", "Director")" class="btn" style="margin-top: 15px;">
                        <i class="fas fa-chart-bar"></i> Ver Reportes
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
