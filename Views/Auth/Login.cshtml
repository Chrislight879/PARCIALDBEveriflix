@{
    ViewBag.Title = "Login";
}

<head>
    <link rel="stylesheet" href="~/Content/Stylesheetcenter.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<div class="login-signup-container">
    <h2>Login</h2>

    <form method="post" action="/Auth/Login" class="form-container">
        <div class="form-group">
            <label for="username" class="form-label">
                <i class="fas fa-user"></i> Username
            </label>
            <input type="text" id="username" name="username" required class="form-control" placeholder="Enter your username" />
        </div>

        <div class="form-group">
            <label for="password" class="form-label">
                <i class="fas fa-lock"></i> Password
            </label>
            <input type="password" id="password" name="password" required class="form-control" placeholder="Enter your password" />
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary">
                <i class="fas fa-sign-in-alt"></i> Login
            </button>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message">
                <i class="fas fa-exclamation-circle"></i> @ViewBag.ErrorMessage
            </div>
        }
    </form>

    <p class="signup-link">Don't have an account? <a href="/Auth/SignUp" class="signup-anchor">Sign up here</a></p>
</div>

<style>
    /* Estilos específicos para login */
    .login-signup-container {
        max-width: 500px;
        margin: 40px auto;
        animation: fadeIn 0.6s ease-out;
    }

    .form-label {
        color: #ff5252;
        font-weight: 600;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-control {
        background-color: #222;
        border: 1px solid #333;
        color: white;
        border-radius: 6px;
        padding: 12px 15px;
        width: 100%;
        transition: all 0.3s;
        margin-bottom: 20px;
    }

        .form-control:focus {
            background-color: #2a2a2a;
            border-color: #b71c1c;
            color: white;
            box-shadow: 0 0 0 0.25rem rgba(183, 28, 28, 0.25);
            outline: none;
        }

        .form-control::placeholder {
            color: #aaa;
        }

    .form-actions {
        margin-top: 25px;
    }

    .btn-primary {
        width: 100%;
        padding: 14px;
        font-size: 1.1em;
        background: linear-gradient(to right, #b71c1c, #d32f2f);
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #d32f2f, #b71c1c);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(183, 28, 28, 0.4);
        }

    .error-message {
        background: linear-gradient(to right, #8c1616, #b71c1c);
        color: white;
        padding: 12px 15px;
        border-radius: 6px;
        margin-top: 20px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .signup-link {
        text-align: center;
        margin-top: 25px;
        color: #aaa;
    }

    .signup-anchor {
        color: #ff5252;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }

        .signup-anchor:hover {
            text-decoration: underline;
            color: #d32f2f;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .login-signup-container {
            padding: 20px;
            margin: 20px auto;
        }
    }
</style>