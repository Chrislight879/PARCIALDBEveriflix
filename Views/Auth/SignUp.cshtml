@{
    ViewBag.Title = "Sign Up";
}

<head>
    <link rel="stylesheet" href="~/Content/Stylesheetcenter.css"> <!-- Apunta al archivo CSS que contiene los estilos -->
</head>

<!-- Contenedor general de login y registro -->
<div class="login-signup-container">
    <h2>Sign Up</h2>
    <!-- Formulario de registro -->
    <form method="post" action="/Auth/SignUp" enctype="multipart/form-data" class="form-container">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="correo">Correo</label>
            <input type="email" id="correo" name="correo" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required class="form-control" />
        </div>
        <div class="form-group">
            <label for="imgURL">Profile Image</label>
            <input type="file" id="imgURL" name="imgURL" class="form-control" />
        </div>
        <!-- Campo para seleccionar tipo de usuario -->
        <div class="form-group">
            <label for="tipoUsuario">Tipo de Usuario</label>
            @Html.DropDownList("id_TipoUsuario", (SelectList)ViewBag.TiposUsuario, "Seleccione un tipo de usuario", new { @class = "form-control", required = "required" })
        </div>

        <div>
            <button type="submit" class="btn-primary">Register</button>
        </div>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="error-message">
                @ViewBag.ErrorMessage
            </div>
        }
    </form>

    <!-- Enlace de login si ya tiene cuenta -->
    <p>Already have an account? <a href="/Auth/Login">Login here</a></p>
</div>

<!-- Aquí puedes agregar cualquier script que necesites para la funcionalidad de registro si es necesario -->
