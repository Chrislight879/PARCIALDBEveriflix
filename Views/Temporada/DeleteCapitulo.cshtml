@model PARCIALDBEveriflix.Models.Capitulo
@{
    ViewBag.Title = "Eliminar Capítulo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/MoviesStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Estilos mejorados */
        body {
            background-color: #121212 !important;
            color: #e0e0e0 !important;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
        }

        .movie-management-container {
            max-width: 1000px;
            margin: 30px auto;
            padding: 30px;
            background-color: #1e1e1e !important;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
        }

        .image-column {
            grid-column: 2;
            grid-row: 1 / span 2;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .movie-management-container h2 {
            color: #ff5252 !important;
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 1px solid #333;
            font-size: 1.8rem;
        }

        .card {
            background-color: #252525 !important;
            border: none !important;
            border-radius: 10px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            background: linear-gradient(135deg, #b71c1c, #8c1616) !important;
            color: white !important;
            border-bottom: none !important;
            padding: 15px 20px;
            border-radius: 10px 10px 0 0 !important;
        }

        .card-header h4 {
            margin: 0;
            font-size: 1.2rem;
            font-weight: 600;
        }

        .card-body {
            padding: 25px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            color: #ff5252 !important;
            font-weight: 600;
            font-size: 0.95rem;
            margin-bottom: 8px;
            display: block;
        }

        .alert {
            border-radius: 4px;
            padding: 15px;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            grid-column: 1 / -1;
        }

        .alert-warning {
            background-color: #ff9800 !important;
            color: white !important;
        }

        .movie-details {
            background-color: #1a1a1a;
            border-radius: 8px;
            padding: 20px;
        }

        dl {
            margin-bottom: 0;
        }

        dt {
            color: #ff5252;
            font-weight: 600;
            padding: 8px 0;
        }

        dd {
            padding: 8px 0;
            color: #e0e0e0;
            margin-bottom: 15px;
        }

        .movie-cover {
            max-width: 100%;
            max-height: 350px;
            border-radius: 8px;
            border: 3px solid #333;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        .form-actions {
            grid-column: 1 / -1;
            display: flex;
            gap: 15px;
            margin-top: 20px;
            justify-content: center;
        }

        .btn {
            padding: 12px 24px;
            border-radius: 6px;
            font-weight: 600;
            transition: all 0.3s;
            border: none;
            cursor: pointer;
        }

        .btn-danger {
            background-color: #d32f2f !important;
            color: white !important;
        }

        .btn-danger:hover {
            background-color: #b71c1c !important;
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(183, 28, 28, 0.3);
        }

        .btn-secondary {
            background-color: #444 !important;
            color: white !important;
        }

        .btn-secondary:hover {
            background-color: #333 !important;
            transform: translateY(-2px);
        }

        .confirmation-text {
            text-align: center;
            margin-bottom: 25px;
            font-size: 1.1rem;
            color: #ff5252;
            font-weight: 500;
            grid-column: 1 / -1;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .form-grid {
                grid-template-columns: 1fr;
            }

            .image-column {
                grid-column: 1;
                grid-row: auto;
                margin-top: 30px;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn {
                width: 100%;
                margin-bottom: 10px;
            }
        }
    </style>
</head>

<div class="movie-management-container">
    <h2>@ViewBag.Title</h2>

    <div class="card">
        <div class="card-header">
            <h4><i class="fas fa-trash-alt"></i> Confirmación de Eliminación</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> <strong>¡Advertencia!</strong> Está a punto de eliminar permanentemente este capítulo y su contenido relacionado.
            </div>

            <h5 class="confirmation-text">¿Está seguro que desea eliminar el siguiente capítulo?</h5>

            <div class="form-grid">
                <!-- Columna izquierda - Detalles del capítulo -->
                <div class="form-column">
                    <div class="movie-details">
                        <dl>
                            <dt>@Html.DisplayNameFor(model => model.Nombre)</dt>
                            <dd>@Html.DisplayFor(model => model.Nombre)</dd>

                            <dt>Duración</dt>
                            <dd class="movie-duration">@Model.Duracion.ToString(@"hh\:mm\:ss")</dd>

                            <dt>Temporada</dt>
                            <dd>@Html.DisplayFor(model => model.Temporada.Nombre)</dd>


                        </dl>
                    </div>
                </div>


            </div>

            @using (Html.BeginForm("DeleteCapitulo", "Temporada", FormMethod.Post, new { id = "deleteForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id_Capitulo)

                <div class="form-actions">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Confirmar Eliminación
                    </button>
                    @Html.ActionLink("Cancelar", "ManageCapitulos", new { idTemporada = Model.Id_Temporada }, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Confirmación antes de eliminar
            document.querySelector('.btn-danger').addEventListener('click', function (e) {
                if (!confirm('¿Estás seguro de que quieres eliminar este capítulo?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
